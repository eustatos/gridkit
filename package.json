{
  "name": "nexus-state",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:ci": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings 0",
    "format": "prettier --write .",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "test:e2e": "npm run test --workspace=e2e",
    "dev:react": "npm run dev --workspace=demo-react",
    "dev:svelte": "npm run dev --workspace=demo-svelte",
    "dev:vanilla": "npm run dev --workspace=demo-vanilla",
    "dev:vue": "npm run dev --workspace=demo-vue",
    "dev:async": "npm run dev --workspace=demo-async",
    "dev:family": "npm run dev --workspace=demo-family",
    "dev:immer": "npm run dev --workspace=demo-immer",
    "dev:middleware": "npm run dev --workspace=demo-middleware",
    "dev:persist": "npm run dev --workspace=demo-persist",
    "dev:forms": "npm run dev --workspace=demo-forms-granularity",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm run release:packages && changeset publish",
    "release:packages": "turbo run build --filter=@nexus-state/*"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "commander": "^14.0.3",
    "eslint": "^8.57.1",
    "fs-extra": "^11.0.0",
    "husky": "^9.1.7",
    "immer": "^10.0.0",
    "jscpd": "^4.0.8",
    "lint-staged": "^16.2.7",
    "prettier": "^3.0.0",
    "turbo": "^1.10.0",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4",
    "vitest": "^0.34.0"
  },
  "pnpm": {
    "overrides": {
      "minimatch": "^10.2.3",
      "basic-ftp": "^5.2.0",
      "rollup": "^4.59.0",
      "esbuild": "^0.25.0",
      "vite": "^5.4.21",
      "svelte": "^5.53.5",
      "ajv": "^6.14.0"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
