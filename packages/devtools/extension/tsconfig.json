{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@gridkit/devtools-bridge/*": ["../bridge/*"],
      "@gridkit/devtools-backend/*": ["../backend/*"]
    }
  },
  "include": ["panel/**/*", "*.js", "*.ts", "*.json"],
  "exclude": ["node_modules", "dist"]
}
