{
  "name": "@gridkit/devtools",
  "version": "0.1.0",
  "description": "Browser DevTools extension for debugging GridKit Enhanced tables",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "extension-dist"
  ],
  "scripts": {
    "build": "tsup index.ts --format esm,cjs --dts",
    "build:extension": "webpack --config webpack.config.js",
    "dev": "tsup index.ts --format esm,cjs --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run integration/",
    "test:integration:coverage": "vitest run integration/ --coverage",
    "test:integration:watch": "vitest integration/",
    "test:integration:update": "vitest run integration/ -u",
    "test:all": "pnpm run test && pnpm run test:integration",
    "clean": "rm -rf extension-dist",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/plugin-syntax-jsx": "^7.28.6",
    "@babel/plugin-transform-modules-commonjs": "^7.28.6",
    "@babel/preset-env": "^7.29.0",
    "@babel/preset-react": "^7.28.5",
    "@gridkit/core": "workspace:*",
    "@gridkit/tanstack-adapter": "workspace:*",
    "@tanstack/react-table": "^8.20.5",
    "@types/chrome": "^0.0.261",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitest/coverage-v8": "^1.2.1",
    "babel-loader": "^10.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.4",
    "jsdom": "^28.1.0",
    "react": "^18.2.0",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "tsup": "^7.2.0",
    "typescript": "^5.0.0",
    "vitest": "^1.2.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "keywords": [
    "gridkit",
    "devtools",
    "debugging",
    "react",
    "table"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gridkit/gridkit.git",
    "directory": "packages/devtools"
  },
  "bugs": {
    "url": "https://github.com/gridkit/gridkit/issues"
  },
  "homepage": "https://gridkit.dev"
}
