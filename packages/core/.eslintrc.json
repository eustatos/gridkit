{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "project": ["./tsconfig.json"],
    "tsconfigRootDir": "."
  },
  "plugins": ["@typescript-eslint", "import"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "prettier"
  ],
  "settings": {
    "import/resolver": {
      "typescript": true,
      "node": true
    }
  },
  "rules": {
    "@typescript-eslint/no-explicit-any": "error",
    "@typescript-eslint/explicit-function-return-type": [
      "error",
      {
        "allowExpressions": true,
        "allowTypedFunctionExpressions": true
      }
    ],
    "@typescript-eslint/naming-convention": [
      "error",
      {
        "selector": "interface",
        "format": ["PascalCase"]
      },
      {
        "selector": "typeAlias",
        "format": ["PascalCase"]
      },
      {
        "selector": "variable",
        "modifiers": ["const", "global"],
        "format": ["UPPER_CASE", "camelCase", "PascalCase"]
      },
      {
        "selector": "class",
        "format": ["PascalCase"],
        "prefix": ["Manager", "Helper", "Util", "Service"],
        "leadingUnderscore": "forbid",
        "message": "Classes with 'Manager', 'Helper', 'Util', or 'Service' in name may violate SRP - review responsibilities"
      }
    ],
    "complexity": ["warn", { "max": 10 }],
    "max-depth": ["warn", { "max": 4 }],
    "max-params": ["warn", { "max": 4 }],
    "max-statements": ["warn", { "max": 50 }],
    "max-lines": [
      "warn",
      {
        "max": 400,
        "skipComments": true,
        "skipBlankLines": true
      }
    ],
    "max-lines-per-function": [
      "warn",
      {
        "max": 100,
        "skipBlankLines": true,
        "skipComments": true
      }
    ],
    "max-lines-per-class": ["warn", { "max": 300 }],
    "no-nested-ternary": "error",
    "@typescript-eslint/no-require-imports": "warn",
    "import/max-dependencies": ["warn", { "max": 20 }],
    "import/no-default-export": "error",
    "import/order": [
      "error",
      {
        "groups": ["builtin", "external", "internal", "parent", "sibling", "index"],
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ],
    "no-console": "warn",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": ["**/*.test.ts", "**/*.spec.ts", "**/__tests__/**/*.ts"]
      }
    ],
    "import/no-unresolved": [
      "error",
      {
        "ignore": ["^@/.*$"]
      }
    ]
  },
  "ignorePatterns": [
    "dist",
    "build",
    "coverage",
    "node_modules",
    "*.config.js",
    "*.config.ts",
    "**/__tests__/**",
    "**/*.test.ts"
  ]
}
