{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2021", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@/types": ["./types"],
      "@/types/*": ["./types/*"],
      "@/performance": ["./performance"],
      "@/performance/*": ["./performance/*"],
      "@/row": ["./row"],
      "@/row/*": ["./row/*"],
      "@/column": ["./column"],
      "@/column/*": ["./column/*"],
      "@/state": ["./state"],
      "@/state/*": ["./state/*"],
      "@/events": ["./events"],
      "@/events/*": ["./events/*"],
      "@/plugin": ["./plugin"],
      "@/plugin/*": ["./plugin/*"],
      "@/validation": ["./validation"],
      "@/validation/*": ["./validation/*"],
      "@/errors": ["./errors"],
      "@/errors/*": ["./errors/*"],
      "@/table": ["./table"],
      "@/table/*": ["./table/*"],
      "@/cell": ["./row/cell"],
      "@/cell/*": ["./row/cell/*"]
    },
    "skipLibCheck": true,
    "strict": false,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "incremental": false,
    "composite": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/__tests__", "**/examples/**"]
}
