{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/esm",
    "rootDir": "src",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/types"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test-d.ts",
    "src/**/*.spec.ts",
    "node_modules",
    "dist"
  ]
}